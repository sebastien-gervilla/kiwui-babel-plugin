{
    "include": ["./src"],
    "exclude": [
        "node_modules", 
        "dist",
        "**/*.test.ts",
        "**/*.test.tsx"
    ],
    "compilerOptions": {
        "baseUrl": "./src",
        "rootDir": "./src",

        "lib": ["esnext"],
        "types": ["node"],
        "moduleResolution": "node",
        "esModuleInterop": true,

        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "inlineSourceMap": false,
        "listEmittedFiles": false,
        "listFiles": false,
        "pretty": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "traceResolution": false,

        "strict": true,
        "noFallthroughCasesInSwitch": true,

        "paths": {
            "@/*": ["./*"],
            "@/core/*": ["./core/*"]
        }
    },
    "compileOnSave": false
}